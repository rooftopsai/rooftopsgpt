# Rooftops AI Environment Variables
# Copy this file to .env.local and fill in the values

# ===========================================
# REQUIRED - Core App Configuration
# ===========================================

# App URL (no trailing slash)
NEXT_PUBLIC_URL=https://rooftops.ai

# ===========================================
# REQUIRED - Supabase Configuration
# ===========================================

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# REQUIRED - Stripe Configuration
# ===========================================

STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Price IDs (get these from Stripe Dashboard)
# AI Employee Tier ($199/month) - set up in Stripe Dashboard
STRIPE_AI_EMPLOYEE_MONTHLY_PRICE_ID=price_xxx
STRIPE_AI_EMPLOYEE_ANNUAL_PRICE_ID=price_xxx

# ===========================================
# REQUIRED - AI Model API Keys
# ===========================================

# OpenAI (for GPT-4o, GPT-5-mini)
OPENAI_API_KEY=sk-xxx
NEXT_PUBLIC_OPENAI_API_KEY=sk-xxx

# Anthropic Claude (optional but recommended)
ANTHROPIC_API_KEY=sk-ant-xxx
GLOBAL_ANTHROPIC_API_KEY=sk-ant-xxx

# ===========================================
# REQUIRED - Google APIs
# ===========================================

# Google Maps & Solar API
GOOGLEMAPS_API_KEY=xxx
NEXT_PUBLIC_GOOGLEMAPS_API_KEY=xxx

# Google OAuth (for Drive integration)
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxx

# ===========================================
# OPTIONAL - Additional AI Providers
# ===========================================

GOOGLE_GEMINI_API_KEY=
MISTRAL_API_KEY=
GROQ_API_KEY=
PERPLEXITY_API_KEY=
OPENROUTER_API_KEY=
XAI_API_KEY=
GLOBAL_XAI_API_KEY=

# ===========================================
# OPTIONAL - Web Search
# ===========================================

BRAVE_SEARCH_API_KEY=xxx

# ===========================================
# OPTIONAL - Voice/Video (LiveKit)
# ===========================================

LIVEKIT_URL=wss://xxx.livekit.cloud
LIVEKIT_API_KEY=xxx
LIVEKIT_API_SECRET=xxx
NEXT_PUBLIC_LIVEKIT_URL=wss://xxx.livekit.cloud

# ===========================================
# OPTIONAL - Text/Voice (Twilio)
# ===========================================

TWILIO_ACCOUNT_SID=xxx
TWILIO_AUTH_TOKEN=xxx
TWILIO_PHONE_NUMBER=+1xxx

# ===========================================
# OPTIONAL - Voice (ElevenLabs)
# ===========================================

ELEVEN_API_KEY=sk_xxx

# ===========================================
# OPTIONAL - Pipedream (Connected Apps)
# ===========================================

PIPEDREAM_CLIENT_ID=xxx
PIPEDREAM_CLIENT_SECRET=xxx
PIPEDREAM_PROJECT_ID=xxx
PIPEDREAM_PROJECT_ENVIRONMENT=production

# ===========================================
# OPTIONAL - Error Monitoring (Sentry)
# ===========================================

NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_ORG=your-org
SENTRY_PROJECT=rooftops-ai

# ===========================================
# OPTIONAL - Rate Limiting (Upstash Redis)
# ===========================================

UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxx

# ===========================================
# OPTIONAL - Document Processing
# ===========================================

LLAMA_CLOUD_API_KEY=xxx

# ===========================================
# LOCAL DEVELOPMENT ONLY
# ===========================================

NEXT_PUBLIC_OLLAMA_URL=http://localhost:11434
NEXT_PUBLIC_OPENAI_ORGANIZATION_ID=
